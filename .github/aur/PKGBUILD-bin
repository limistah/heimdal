# Maintainer: Aleem Isiaka <limistah@github.com>
# This is the binary version that downloads prebuilt binaries
pkgname=heimdal-bin
pkgver=1.0.0
pkgrel=1
pkgdesc="Universal dotfile and system configuration manager (binary)"
arch=('x86_64')
url="https://github.com/limistah/heimdal"
license=('MIT')
provides=('heimdal')
conflicts=('heimdal')
source=("$pkgname-$pkgver.tar.gz::https://github.com/limistah/heimdal/releases/download/v$pkgver/heimdal-linux-amd64.tar.gz")
sha256sums=('a1ace4266b457b9035fba0f1795ed4e6b4efe24bdde9ec563d04e3e54d1be6fd')

package() {
    install -Dm755 "$srcdir/heimdal" "$pkgdir/usr/bin/heimdal"
}

# To publish to AUR:
# 1. Create an account on https://aur.archlinux.org
# 2. Set up SSH keys with: ssh-keygen -t ed25519
#    Upload public key to https://aur.archlinux.org/account/
# 3. Clone the AUR repository:
#    git clone ssh://aur@aur.archlinux.org/heimdal-bin.git
# 4. Add this PKGBUILD file
# 5. Generate .SRCINFO:
#    makepkg --printsrcinfo > .SRCINFO
# 6. Commit and push:
#    git add PKGBUILD .SRCINFO
#    git commit -m "Initial commit: heimdal-bin 1.0.0"
#    git push
#
# To update:
# 1. Update pkgver
# 2. Update sha256sums (get from GitHub release)
# 3. Regenerate .SRCINFO: makepkg --printsrcinfo > .SRCINFO
# 4. Commit and push:
#    git add PKGBUILD .SRCINFO
#    git commit -m "Update to version X.Y.Z"
#    git push
